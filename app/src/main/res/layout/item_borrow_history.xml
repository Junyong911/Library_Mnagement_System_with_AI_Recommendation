<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Book Cover Image -->
    <ImageView
        android:id="@+id/bookCoverImageView"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:contentDescription="Book Cover"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Book Title -->
    <TextView
        android:id="@+id/bookTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Book Title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/bookCoverImageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Book Author and Genre -->
    <TextView
        android:id="@+id/bookAuthorGenreTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="by Author Name (Genre)"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/bookCoverImageView"
        app:layout_constraintTop_toBottomOf="@id/bookTitleTextView"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Rating Bar -->
    <RatingBar
        android:id="@+id/bookRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="0"
        android:isIndicator="true"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/bookAuthorGenreTextView"
        app:layout_constraintStart_toEndOf="@id/bookCoverImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
